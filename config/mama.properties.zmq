# This is where all messages will be published including requests
mama.zmq.transport.pub.outgoing_url_0=tcp://*:5557
# This is where all messages will be received including replies
mama.zmq.transport.pub.incoming_url_0=tcp://*:5556

# This is where all messages will be published including requests
mama.zmq.transport.pub2.outgoing_url_0=tcp://*:5559
# This is where all messages will be received including replies
mama.zmq.transport.pub2.incoming_url_0=tcp://*:5558


# This is where all messages will be published including requests
mama.zmq.transport.sub.outgoing_url_0=tcp://localhost:5556
# This is where all messages will be received including replies
mama.zmq.transport.sub.incoming_url_0=tcp://localhost:5557
# Message pool sizes for receive message buffers
mama.zmq.transport.sub.msg_pool_size=1024
mama.zmq.transport.sub.msg_node_size=4096


# This is where all messages will be published including requests
mama.zmq.transport.subdual.outgoing_url_0=tcp://localhost:5556
# This is where all messages will be received including replies
mama.zmq.transport.subdual.incoming_url_0=tcp://localhost:5557
# Connect to additional publisher 'pub2'
mama.zmq.transport.subdual.outgoing_url_1=tcp://localhost:5558
mama.zmq.transport.subdual.incoming_url_1=tcp://localhost:5559


# Ensure loopback is running multicast for these to work
mama.zmq.transport.pub_pgm.outgoing_url_0=pgm://127.0.0.1;239.192.1.1:5657
mama.zmq.transport.pub_pgm.incoming_url_0=pgm://127.0.0.1;239.192.1.1:5656

mama.zmq.transport.sub_pgm.outgoing_url_0=pgm://127.0.0.1;239.192.1.1:5656
mama.zmq.transport.sub_pgm.incoming_url_0=pgm://127.0.0.1;239.192.1.1:5657

# Ensure loopback is running multicast for these to work
mama.zmq.transport.pub_epgm.outgoing_url_0=epgm://127.0.0.1;239.192.1.1:5657
mama.zmq.transport.pub_epgm.incoming_url_0=epgm://127.0.0.1;239.192.1.1:5656

mama.zmq.transport.sub_epgm.outgoing_url_0=epgm://127.0.0.1;239.192.1.1:5656
mama.zmq.transport.sub_epgm.incoming_url_0=epgm://127.0.0.1;239.192.1.1:5657

# Note destination here must be writable
mama.zmq.transport.pub_ipc.outgoing_url_0=ipc:///tmp/feeds_0
mama.zmq.transport.pub_ipc.incoming_url_0=ipc:///tmp/req_0

mama.zmq.transport.sub_ipc.outgoing_url_0=ipc:///tmp/req_0
mama.zmq.transport.sub_ipc.incoming_url_0=ipc:///tmp/feeds_0


